{
   "manifest_version": 3,
   "version": "4.0",
   "name": "YellowCloud | Darkmode and more for SoundCloud®",
   "short_name": "YC",
   "description": "YellowCloud offers loads of customizations enhancing the SoundCloud® experience.",
   "homepage_url": "https://dapperbenji.com/yellowcloud",
   "icons": {
      "16": "src/static/icons/icon-16.png",
      "48": "src/static/icons/icon-48.png",
      "128": "src/static/icons/icon-128.png"
   },
   "content_scripts": [ {
      "js": ["init.js"],
      "css" : ["src/css/style.css"],
      "matches": ["*://soundcloud.com/*"],
      "run_at": "document_idle"
   } ],
   "action": {
      "default_icon": {
         "19": "src/static/browser_action/icon-19.png",
         "38": "src/static/browser_action/icon-38.png"
      },
      "default_title": "YellowCloud for SoundCloud®",
      "default_popup": "src/html/popup.html"
   },
   "permissions": ["storage", "webNavigation", "activeTab"],
   "optional_permissions": ["unlimitedStorage"],
   "host_permissions": [
      "https://soundcloud.com/",
      "*://*/*"
   ],
   "web_accessible_resources": [{
      "resources": [
         "src/html/*",
         "src/scripts/insignia.min.js",
         "src/scripts/main.js"
      ],
      "matches": ["https://soundcloud.com/*"],
      "extension_ids": [
         "fbdlmbhemipjmnkikilolfjbdkpfogba",
         "lcfikpnamgogopoehcodockddjhdifdc"
      ]
   }]
}
