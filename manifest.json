{
   "manifest_version": 2,
   "version": "3.4",
   "name": "SoundCloud Enhancer - Dark mode and more",
   "short_name": "SCE",
   "description": "SoundCloud Enhancer offers loads of customizations enhancing the SoundCloud experience.",
   "homepage_url": "https://dapperbenji.com/scenhancer",
   "icons": {
      "16": "assets/icons/icon-16.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
   },
   "content_scripts": [ {
      "js": ["assets/js/insignia.min.js", "assets/js/enhancer.min.js"],
      "css" : ["assets/css/style.min.css"],
      "matches": ["https://soundcloud.com/*"],
      "run_at": "document_idle"
   } ],
   "background": {
      "scripts": ["assets/js/background.min.js"],
      "persistent": false
   },
   "browser_action": {
      "default_icon": {
         "19": "assets/icons/icon-16.png",
         "38": "assets/icons/icon-38.png"
      },
      "default_title": "SoundCloud Enhancer",
      "default_popup": "assets/html/popup.html"
   },
   "permissions": ["storage", "activeTab", "https://soundcloud.com/"],
   "web_accessible_resources": ["assets/html/*"]
}
