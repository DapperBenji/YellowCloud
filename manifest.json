{
   "manifest_version": 2,

   "version": "1.1",
   "name": "SoundCloud Enhancer",
   "description": "This extension gives you tools, that will make your SoundCloud more customizable.",
   "homepage_url": "http://benjaminbachjensen.com",

   "icons": {
     "16": "icons/icon-16.png",
     "48": "icons/icon-48.png",
     "128": "icons/icon-128.png"
   },
   "content_scripts": [ {
      "js": ["js/jquery.min.js","js/vex.combined.min.js", "js/insignia.min.js", "js/enhancer.js"],
      "css" : ["css/vex.css", "css/vex-theme-top.css", "css/insignia.min.css", "css/style.css"],
      "matches": [ "https://soundcloud.com/*" ],
      "run_at": "document_end"
   } ],
   "browser_action": {
      "default_icon": {
         "19": "icons/icon-19.png",
         "38": "icons/icon-38.png"
      },
      "default_title": "SoundCloud Enhancer"
   },
   "background": {
      "scripts": ["background.js"]
   },
   "permissions": [ "tabs", "storage", "activeTab", "https://soundcloud.com/" ]
}
